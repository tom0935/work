    function initTable() {
        $('#table').bootstrapTable({
            url: '@Url.Action("getQRCodeQA", "QRCodeQA")',
            columns: [
            {
                field: 'ANS',
                title: '回覆留言',
                valign: 'middle',
                align: 'center',
                width: '5',                
                formatter: function (value, row, iIndex) {                  
                    return '<a href="javascript:doReply(\'' + row.UUID + '\')" title="回覆留言"><i class="glyphicon glyphicon-envelope"></i></a>';
                }
             },                
            {
                field: 'UUID',
                title: '編號',
                align: 'center',
                valign: 'middle',
                width: '8'
            },
            {
                field: 'DT',
                title: '日期',
                valign: 'middle',
                align: 'center',
                sortable: true,
                width: '100'
             },
            {
                field: 'CNAME',
                title: '姓名',
                align: 'center',
                valign: 'middle',
                sortable: true,
                width: '100'
            },
            {
                field: 'TEL',
                title: '電話',
                align: 'center',
                valign: 'middle',
                sortable: true,
                width: '100'
            },{         
                field: 'EMAIL',
                title: 'EMAIL',
                width: '100',
                align: 'center', 
                sortable: true,                            
                valign: 'middle'
            },{
                field: 'QUESTION',
                title: '留言內容',
                width: '300',
                align: 'left',
                sortable: true,
                valign: 'middle',
                formatter: function (value, row, iIndex) {                  
                   var str="";
                    if(value.length > 15){
                       return value.substr(0,15) + "...";
                    }else{
                      return value;
                    }
                     
                }
            }
            ],
            onClickRow: function (row, $element) {
                $('#dialog').html(row.CNAME + "-留言回覆");
                $('#DT').val(row.DT);
                $('#EMAIL').val(row.EMAIL);
                $('#UUID').val(row.UUID);
                $('#QRCODE_DTL_UUID').val(row.QRCODE_DTL_UUID);                
                $('#CNAME').val(row.CNAME);
                $('#QUESTION').val(row.QUESTION);
                $('#ANSWER').val('');  

                //showDetail(row.UUID);
                                
            },
            rowStyle:function(row, index){
            
               
              if(row.ANSWER!=""){
                return {classes: "warning"};
              }else{
                return {classes: "active"};
              }
            },
            onExpandRow:function(index, row, $detail){
             //   showDetail(row.UUID);
            }
        });


  


        $('#table').on('check.bs.table uncheck.bs.table ' +
                'check-all.bs.table uncheck-all.bs.table', function () {
                    selections = getIdSelections();
                });
        $('#table').on('click-row.bs.table', function (e, row, $element) {
            $('.success').removeClass('success');
            $($element).addClass('success');
        });





        $('#report').click(function () {
           doRunReport();
        });


 


    }

    $(window).load(function () {



        $('#form').validator().on('submit', function (e) {

            if (e.isDefaultPrevented()) {

            } else {
                bootbox.confirm("確認儲存?", function (result) {

                    if (result) {

                        var url;
                        var obj = {};
                       
                       url = '@Url.Action("doReply", "QRCodeQA")';
                       obj.UUID = $('#UUID').val();
                       obj.QUESTION = $('#QUESTION').val();
                       obj.ANSWER = $('#ANSWER').val();
                       obj.EMAIL = $('#EMAIL').val();
                      $('#form').ajaxSubmit({
                        url: url,
                        type: 'post',
                        dataType: 'json',
                        data:obj,
                        beforeSubmit: function () {
                    
                        },
                        success: function (data) {
                                if (data.status > 0) {
                                    $('#replyModal').modal('hide');
                                    $('#table').bootstrapTable("refresh");                                                                       
                                     showalert('信件已回覆成功!', 'alert-success');
                                } else {
                                    $('#replyModal').modal('hide');
                                    showalert(data.message, 'alert-danger');
                                }            
                        }
                    });


                    }
                });
                return false;
            }
        });
    });

    function detailFormatter(index, row) {
        var html = [];
        /*
        $.each(row, function (key, value) {
            html.push('<p><b>' + key + ':</b> ' + value + '</p>');
        });*/
        
        html.push('<b>留言日期:' + row.DT + '</b><br>');
        html.push('<b>留言內容:' + row.QUESTION + '</b><br><br>');
        html.push('<div style="border-top:1px dashed #cccccc;height: 1px;overflow:hidden"></div>');
        html.push('<br><b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;回覆日期:' + row.RDT + '</b><br>');
        html.push('<b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;回覆內容:' + row.ANSWER + '</b><br><div id="reply"></div>');
        var str='';
          if(row.ANSWER!=""){
               var obj={};
                obj.UUID = row.UUID;
               $.ajax({
                      url: '@Url.Action("getQRCodeQAReply", "QRCodeQA")',
                      type: "post",
                      dataType: "json",
                      data:JSON.stringify(obj),
                      contentType: "application/json",
                      sync: false,
                      success: function (data, textStatus, jqXHR) {
                       
                        $.each(data.rows, function (index, value) {
                           //console.log(value);
                           str +='<br><b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;回覆日期:' + value.RDT + '</b><br><b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;回覆內容:' + value.CONTENT + '</b><br>';
                           
                        })
                       
                         $('#reply').html(str);
                       
                    }
                });
                
           html.push(str);
        }
        return html.join('');
    }

    function showDetail(UUID){
                $('#REPLY').val('');
                var obj={};
                obj.UUID = UUID;
               $.ajax({
                      url: '@Url.Action("getQRCodeQAReply", "QRCodeQA")',
                      type: "post",
                      dataType: "json",
                      data:JSON.stringify(obj),
                      contentType: "application/json",
                      sync: false,
                      success: function (data, textStatus, jqXHR) {
                        var str='';
                        $.each(data.rows, function (index, value) {
                           //console.log(value);
                           str +='<br><b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;回覆日期:' + value.RDT + '</b><br><b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;回覆內容:' + value.CONTENT + '</b><br>';
                           
                        })
                         $('#REPLY').val(str);
                    }
                });
    }


    function doPrint(UUID,w,h) {
