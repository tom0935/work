            //$('#CONTENT').val(row.CONTENT);
            $("#CONTENT").jqteVal(row.CONTENT);
            $('#EDMURL').val(row.EDMURL);
            $('#img').attr("src", "http://reservation.howard-hotels.com.tw/WebBooking/images/qrcode/"+ row.IMG);

            

            
            
            openModel();
    }







    window.operateEvents = {
        'click .remove': function (e, value, row, index) {

        }
    };





    





    function doReply(id){
        $('#replyModal').modal('toggle');
    }



