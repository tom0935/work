<div class="panel panel-default col-md-12">
 <div class="panel-body collapse in" id="pb">
    <table id="table"
       data-toolbar="#toolbar"
       data-classes="table table-hover table-condensed"
      
       data-search="true"
       data-detail-view="true"
       data-detail-formatter="detailFormatter"
       data-unique-id="UUID"
       data-show-refresh="true"
       data-show-toggle="true"
       data-show-columns="true"
       data-show-export="true"
       data-minimum-count-columns="2"
       data-show-pagination-switch="true"
       data-sort-name="UUID"
       data-pagination="true"
       data-id-field="UUID"
       data-page-size="20"
       data-page-list="[20, 50, 100,All]"
       data-show-footer="false"
       data-side-pagination="server"
       data-click-to-select="true"
       data-single-select="true"
       data-response-handler="responseHandler"></table>
    </div>
</div>


<form data-toggle="validator" id="form" class="form-horizontal" role="form">
<input type="hidden"  id="EMAIL" name="EMAIL" >
<input type="hidden"  id="UUID" name="UUID" >
<input type="hidden"  id="QRCODE_DTL_UUID" name="QRCODE_DTL_UUID" >
<input type="hidden"  id="CNAME" name="CNAME" >
<input type="hidden"  id="REPLY" name="REPLY" >
    <div id="replyModal" class="modal fade" role="dialog">
        <div class="modal-dialog">            
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h5 class="modal-title" id="dialog"></h5>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="DT">留言日期</label>
                        <div class="col-sm-10">                            
                           <input type="text" class="form-control" id="DT" name="DT" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="QUESTION">客人留言</label>
                        <div class="col-sm-10">                          
                          <textarea rows="3" class="form-control" id="QUESTION" name="QUESTION" readonly ></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="ANSWER">回覆留言</label>
                        <div class="col-sm-10">                            
                          <textarea rows="8" class="form-control" id="ANSWER" name="ANSWER"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-ok"></i> 確認送出</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> 關閉</button>
                </div>
            </div>

        </div>

    </div> 
    </form>