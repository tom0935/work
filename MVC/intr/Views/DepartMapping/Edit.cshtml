@model IntranetSystem.Models.DepartMapping
@{
    ViewBag.Title = "使用者所屬部門編輯";
}
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-primary">
            <div class="panel-heading">@ViewBag.Title</div>
            
            <!-- Form Start -->
            @using (Html.BeginForm("Edit", "DepartMapping", FormMethod.Post, new { @class = "form-horizontal", role = "from" }))
            {
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">姓名</label>
                        <div class="col-sm-10"><p class="form-control-static">@Model.NAME</p></div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">帳號</label>
                        <div class="col-sm-10"><p class="form-control-static">@Model.USERID</p></div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">所屬部門</label>
                        <div class="col-sm-4">
                            <select id="workin" name="workin" multiple size="15" class="form-control" ondblclick="delDepart();">
                            @Html.Raw(Model.WORKIN)
                            </select>
                        </div>
                        <div class="col-sm-2">
                            <p><a href="javascript:selDepart();" class="btn btn-default btn-block"><span class="glyphicon glyphicon-chevron-left"></span>新增</a></p>
                            <p><a href="javascript:delDepart();" class="btn btn-danger btn-block">移除<span class="glyphicon glyphicon-chevron-right"></span></a></p>
                        </div>
                        <div class="col-sm-4">
                            <select id="department" name="department" multiple size="15" class="form-control" ondblclick="selDepart();">
                            @Html.Raw(Model.DEPARTMENT)
                            </select>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-md-4 col-md-offset-2">
                            <button class="btn btn-block btn-success" type="submit" onclick="return checkForm();">確認送出</button>
                        </div>
                        <div class="col-md-4">
                            @Html.ActionLink("回上層", "Index", "User", null, new { @class = "btn btn-block btn-default" })
                        </div>
                    </div>
                </div>
            }
            <!-- Form Stop -->
            
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/ud_mapping.js" type="text/javascript"></script>
}
