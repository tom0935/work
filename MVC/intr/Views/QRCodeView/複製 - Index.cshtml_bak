             //   sortable: true,
                valign: 'middle',
                formatter: function (value, row, iIndex) {                  
                       return '<a href="'+value+'" target="_blank" title="開啟網址"><i class="glyphicon glyphicon-link"></i></a>';
                }
            },{
                field: 'SUBJECT',
