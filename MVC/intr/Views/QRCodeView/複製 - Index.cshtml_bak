            }, 
            {
                field: 'URL',
                title: 'QRCode網址',
                width: '100',
                align: 'left',
              //  sortable: true,
                valign: 'middle'
            }, {
                field: 'EDIT_USER',
                title: '編輯人員',
                align: 'center',
                width: '100',
             //   sortable: true,
                valign: 'middle'
            },
              {
                  field: 'EDIT_DT',
                  title: '編輯日期',
                  align: 'center',
                  width: '80',
             //     sortable: true,
                  valign: 'middle'
              },
              {
                  field: 'CNT',
                  title: '點擊數',
                  align: 'center',
                  width: '80',
