@model IntranetSystem.Models.Company
@{
    ViewBag.Title = "公司資料明細";
}
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-primary">
            <div class="panel-heading">@ViewBag.Title</div>
            <form class="form-horizontal" role="form">
            <div class="panel-body">
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        代碼</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.CODE</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        公司名稱</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.NAME</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        統一編號</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.VAT</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        地址</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.ADDR</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        電話</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.TEL</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        傳真</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.FAX</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        公司網址</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.URL</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        備註</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.REMARK</p>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        @Html.ActionLink("編輯資料", "Edit", "Company", new { id = 1 }, new { @class = "btn btn-block btn-info" })
                    </div>
                </div>
            </div>
            </form>
        </div>
    </div>
</div>
