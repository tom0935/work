@{
    ViewBag.Title = "印表機耗材領用統計表";
}
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-primary">
            <div class="panel-heading">
                @ViewBag.Title</div>
            <div class="panel-body">
                <!-- Form Start -->
                @using (Html.BeginForm("DeliveryReportView", "MaterialReports", FormMethod.Post, new { @class = "form-horizontal", role = "from" }))
                {
                    <div class="form-group">
                        <label for="startDate" class="col-sm-2 control-label">
                            統計區間</label>
                        <div class="col-sm-5">
                            <input type="date" class="form-control" id="startDate" name="startDate" placeholder="開始日期">
                        </div>
                        <div class="col-sm-5">
                            <input type="date" class="form-control" id="endDate" name="endDate" placeholder="結束日期">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="material" class="col-sm-2 control-label">
                            選擇耗材</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="mid">
                                @foreach (var item in (Dictionary<string, string>)ViewData["MaterialList"])
                                {
                                    <option value="@item.Key">@item.Value</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-10 col-sm-offset-2">
                        <button type="sumbit" class="btn btn-success btn-block">
                            查詢資料</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section header {
    @Scripts.Render("~/bundles/jbval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/themes/jui/css")
    <script type="text/javascript">
        $(function () { $("input,select,textarea").not("[type=submit]").jqBootstrapValidation(); });
    </script>
}
@section scripts{
    <script type="text/javascript">
        $('#startDate').datepicker({
            inline: true,
            dateFormat: 'yy-mm-dd'
        });

        $('#endDate').datepicker({
            inline: true,
            dateFormat: 'yy-mm-dd'
        });
    </script>
}
