<div id="alert_placeholder"></div>
<h4><span class="label label-primary">@ViewBag.Title</span></h4>
<script>

    var valid = false;
  var selections = [];
    $(document).ready(function () {
        initTable();

    });

    function initTable() {
        $('#table').bootstrapTable({
            url: '@Url.Action("getNewper", "FnNewper")',
            columns: [
            {
                field: 'state',
                checkbox: true,
                align: 'center',
                valign: 'middle'
            },
            {
                field: 'EDIT',
                title: '編輯',
                align: 'center',
                width: '20',
                events: operateEvents,
                formatter: operateFormatter
            },
            {
                field: 'PRINT',
                title: '列印',
                align: 'center',
                width: '20',
                formatter: function (value, row, iIndex) {
              
                    if(row.PRINT_MARK=="Y"){
                       return '<a class="edit" href="javascript:doPrint(\'' + row.NEWPER_CODE + '\')" title="列印"><i class="glyphicon glyphicon-print"></i></a>';
                    }else{
                      return '<a class="edit" href="javascript:doPrint(\'' + row.NEWPER_CODE + '\')" style="color: #999999" title="列印"><i class="glyphicon glyphicon-print"></i></a>';;
                    }
                }
            },
            {
                field: 'NEWPER_CODE',
                title: '員編',
                width: '60',
                align: 'center',
             //   sortable: true,
                valign: 'middle'
            }, {
                field: 'NEWPER_DE_CODE',
                title: '員工/眷屬',
                width: '60',
                align: 'center',
              //  sortable: true,
                valign: 'middle',
                formatter: function (value, row, iIndex) {
                    var str;
                    if (value == "M") {
                        str = "本人";
                    } else {
                        str = "眷屬";
                    }
                    return str;
                }
            }, {
                field: 'COMP_NO',
                title: '公司名稱',
                align: 'center',
                width: '120',
             //   sortable: true,
                valign: 'middle',
                formatter: function (value, objRow, iIndex) {
                    return value + " " + objRow.COMP_NAME2;
                }
            }, {
                field: 'NEWPER_NAME',
                title: '姓名',
                align: 'center',
                width: '150',
             //   sortable: true,
                valign: 'middle',
                formatter: function (value, objRow, iIndex) {
                    return value + " " + objRow.NEWPER_ID;
                }
            },
              {
                  field: 'NEWPER_LABOR',
                  title: '勞保費',
                  align: 'right',
                  width: '80',
             //     sortable: true,
                  valign: 'middle'
              },
              {
                  field: 'NEWPER_GROUP',
                  title: '健保費',
                  align: 'right',
                  width: '80',
             //     sortable: true,
                  valign: 'middle'
              }
            ]

        });

          //公司
          $.ajax({
              url: '@Url.Action("getCORP", "FnNewper")',
              type: "post",
              dataType: "json",
              contentType: "application/json",
              sync: false,
              success: function (data, textStatus, jqXHR) {
                  $("#COMP_NO2").append("<option value='all'>全部</option>");
                  $.each(data, function (index, value) {
                      $("#COMP_NO").append("<option value='" + value.CODE + "'>" +value.CODE +" "+ value.NAME + "</option>");
                      $("#COMP_NO2").append("<option value='" + value.CODE + "'>" +value.CODE +" "+ value.NAME + "</option>");
                  })
              }
          });

          $('#PRINT_MARK').bootstrapSwitch();

        setTimeout(function () {
            $('#table').bootstrapTable('resetView');
        }, 200);
       
        $('#table').on('check.bs.table uncheck.bs.table ' +
                'check-all.bs.table uncheck-all.bs.table', function () {
                    $('#remove').prop('disabled', !$('#table').bootstrapTable('getSelections').length);
                    
                    // save your data, here just save the current page
                    selections = getIdSelections();
                    // push or splice the selections if you want to save all data selections
                });
        $('#table').on('click-row.bs.table', function (e, row, $element) {
            $('.success').removeClass('success');
            $($element).addClass('success');
        });
        /*
        $('#table').on('expand-row.bs.table', function (e, index, row, $detail) {
            if (index % 2 == 1) {
                $detail.html('Loading from ajax request...');
                $.get('LICENSE', function (res) {
                    $detail.html(res.replace(/\n/g, '<br>'));
                });
            }
        });
        $('#table').on('all.bs.table', function (e, name, args) {
            // console.log(name, args);
        });
        */
        $('#create').click(function () {
            $('#dgTitle').html('新增資料');
            initForm();
            openModel();
        });




        $('#remove').click(function () {

            bootbox.confirm("確認刪除?", function (result) {
                if (result) {
                    var obj = {};
                    //var ids = getIdSelections();
                    //var UUID = $.parseJSON(JSON.stringify(ids));
                    var row = $('#table').bootstrapTable('getSelections');
                    obj.list = row;

                    $.ajax({
                        url: '@Url.Action("doRemove", "FnNewper")',
                        type: "post",
                        data: JSON.stringify(obj),
                        dataType: "json",
                        contentType: "application/json",
                        success: function (data, textStatus, jqXHR) {
                          if(data.status !="0"){
                            var ids = getIdSelections();
                            $('#table').bootstrapTable('remove', {
                                field: 'UUID',
                                values: ids
                            });
                            $('#table').bootstrapTable("refresh");
                            $('#remove').prop('disabled', true);
                            showalert('選取資料已刪除', 'alert-success');
                          }else{                        
                             showalert(data.message, 'alert-danger');
                          }
                        }
                    });
                }
            });



        });
        $(window).resize(function () {
            $('#table').bootstrapTable('resetView', {
                height: getHeight()
            });
        });

    }


    function doPrint(UUID) {
    var obj={};

        var urlStr = "@Url.Action("doPrint","FnNewper")";                
           //開啟PDF
         window.open(urlStr + '?UUID=' + UUID );

    }

    function doPrintCorp(){    
        var CORP = $('#COMP_NO2').val();
        var urlStr = "@Url.Action("doPrint","FnNewper")";                
           //開啟PDF
         window.open(urlStr + '?CORP=' + CORP );

    }


    function doEdit(uuid) {
        var row = $('#table').bootstrapTable("getRowByUniqueId", uuid);
        $('#dgTitle').html('編輯資料');
            $('#UUID').val(row.UUID);
            $('#COMP_NO').val(row.COMP_NO);
            $('#NEWPER_CODE').val(row.NEWPER_CODE);
            $('#NEWPER_DE_NO').val(row.NEWPER_DE_NO);
            $('#NEWPER_DE_CODE').val(row.NEWPER_DE_CODE);            
            $('#NEWPER_NAME').val(row.NEWPER_NAME);
            $('#NEWPER_ID').val(row.NEWPER_ID);
            $('#NEWPER_LABOR').val(row.NEWPER_LABOR);
            $('#NEWPER_GROUP').val(row.NEWPER_GROUP);

            if (row.PRINT_MARK == "Y") {
                $('#PRINT_MARK').bootstrapSwitch('state', true, true);
            } else {
                $('#PRINT_MARK').bootstrapSwitch('state', false, false);
            }
            openModel();
    }




    function operateFormatter(value, row, index) {
        return '<a class="edit" href="javascript:doEdit(\'' + row.UUID + '\')" title="編輯"><i class="glyphicon glyphicon-edit"></i></a>';
    }

    window.operateEvents = {
        'click .remove': function (e, value, row, index) {

        }
    };

    $(window).load(function () {
        $('#form').validator().on('submit', function (e) {

            if (e.isDefaultPrevented()) {

            } else {
                bootbox.confirm("確認儲存?", function (result) {

                    if (result) {

                        var url;
                        var obj = getObj();

                        if ($('#dgTitle').html() == "新增資料") {
                            url = '@Url.Action("doCreate", "FnNewper")';
                        } else {
                            url = '@Url.Action("doEdit", "FnNewper")';
                            obj.UUID = $('#UUID').val();
                        }




                        $.ajax({
                            url: url,
                            type: "post",
                            data: JSON.stringify(obj),
                            dataType: "json",
                            contentType: "application/json",
                            success: function (data, textStatus, jqXHR) {

                                if (data.status > 0) {
                                    $('#myModal').modal('hide');
                                    $('#table').bootstrapTable("refresh");
                                    showalert('資料已儲存更新', 'alert-success');
                                } else {
                                    $('#myModal').modal('hide');
                                    showalert(data.message, 'alert-danger');
                                }
                            }
                        });

                    }
                });
                return false;
            }
        });
    });



    function initForm() {
        $('#UUID').val('');
        $('#COMP_NAME').val('');
        $('#NEWPER_NAME').val('');
        $('#NEWPER_ID').val('');
        $('#NEWPER_CODE').val('');
        $('#NEWPER_LABOR').val('');
        $('#NEWPER_GROUP').val('');
        $('#NEWPER_DE_NO').val('');
        $('#NEWPER_DE_CODE').val('');
        $('#PRINT_MARK').bootstrapSwitch('state', true, true);
    }

    function getObj() {
        var obj = {};
        obj.UUID = $('#UUID').val();
        obj.COMP_NO = $('#COMP_NO').val();
        obj.NEWPER_NAME = $('#NEWPER_NAME').val();
        obj.NEWPER_ID = $('#NEWPER_ID').val();
        obj.NEWPER_CODE = $('#NEWPER_CODE').val();
        obj.NEWPER_LABOR = $('#NEWPER_LABOR').val();
        obj.NEWPER_GROUP = $('#NEWPER_GROUP').val();
        obj.NEWPER_DE_NO = $('#NEWPER_DE_NO').val();
        obj.NEWPER_DE_CODE = $('#NEWPER_DE_CODE').val();
        if ($('#PRINT_MARK').bootstrapSwitch('state')) {
            obj.PRINT_MARK = "Y";
        } else {
            obj.PRINT_MARK = "N";
        }
        return obj;
    }
    function showModel2(){ 
        $('#pdfModal').modal('toggle');
    }

    function openModel() {
 
        $('#myModal').modal('toggle');
    }

    function doSave() {
       
        $('#form').validator('validate');

        if (valid) {


            bootbox.confirm("確認儲存?", function (result) {

                if (result) {

                    var url;
                    var obj = getObj();

                    if ($('#dgTitle').html() == "新增資料") {
                        url = '@Url.Action("doCreate", "FnNewper")';
                    } else {
                        url = '@Url.Action("doEdit", "FnNewper")';
                        obj.UUID = $('#UUID').val();
                    }




                    $.ajax({
                        url: url,
                        type: "post",
                        data: JSON.stringify(obj),
                        dataType: "json",
                        contentType: "application/json",
                        success: function (data, textStatus, jqXHR) {
                            
                            if (data.status > 0) {
                                $('#myModal').modal('hide');
                                $('#table').bootstrapTable("refresh");
                                showalert('資料已儲存更新', 'alert-success');
                            } else {
                                $('#myModal').modal('hide');
                                showalert(data.message, 'alert-danger');
                            }
                        }, beforeSend: function (xhr, settings) {
                           settings.data =
                          settings.data.replace(/%5D%5B(.+?)%5D=/g, "%5D.$1=");
                         }
                    });

                }
            });
        }
    }



</script>
<div id="toolbar">
    <button id="create" class="btn btn-success">
        <i class="glyphicon glyphicon-plus"></i> 新增
    </button>
    <button id="remove" class="btn btn-danger" disabled>
        <i class="glyphicon glyphicon-remove"></i> 刪除
    </button>
    <button id="print" class="btn btn-warning" onclick="showModel2()">
        <i class="glyphicon glyphicon-print"></i> 公司列印 
    </button>

</div>
<!--data-sort-name="COMP_NO"-->
<table id="table"
       data-toolbar="#toolbar"
       data-classes="table table-hover table-condensed"
       data-height="600"
       data-search="true"
       
       data-unique-id="UUID"
       data-show-refresh="true"
       data-show-toggle="true"
       data-show-columns="true"
       data-show-export="true"
       data-minimum-count-columns="2"
       
       data-pagination="true"
       data-id-field="UUID"
       data-page-size="20"
       data-page-list="[20, 50, 100,All]"
       data-show-footer="false"
       data-side-pagination="server"
       data-click-to-select="true"
       data-single-select="false"
       data-response-handler="responseHandler"></table>
<form data-toggle="validator" id="form" class="form-horizontal" role="form">
 <input type="hidden" id="UUID" name="UUID" />
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h5 class="modal-title" id="dgTitle"></h5>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="COMP_NO">公司名稱</label>
                        <div class="col-sm-10">                            
                            <select class="form-control"  id="COMP_NO" name="COMP_NO"></select>   
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="NEWPER_DE_NO">部門編號</label>
                        <div class="col-sm-10">                            
                           <input type="text" class="form-control" id="NEWPER_DE_NO" name="NEWPER_DE_NO" placeholder="部門編號" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="NEWPER_DE_CODE">員工/眷屬</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="NEWPER_DE_CODE" name="NEWPER_DE_CODE" placeholder="M=本人,數字=眷屬數" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="NEWPER_NAME">姓名</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="NEWPER_NAME" name="NEWPER_NAME" placeholder="姓名" required>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="NEWPER_CODE">員編</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="NEWPER_CODE" name="NEWPER_CODE" placeholder="員編" required>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="NEWPER_ID">身份證號</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="NEWPER_ID" name="NEWPER_ID" placeholder="身份證號" required>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="NEWPER_LABOR">勞保費</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="NEWPER_LABOR" name="NEWPER_LABOR" placeholder="勞保費" required>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="NEWPER_GROUP">健保費</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="NEWPER_GROUP" name="NEWPER_GROUP" placeholder="健保費" required>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="NEWPER_GROUP">是否列印</label>
                        <div class="col-sm-10">
                            <input type="checkbox" id="PRINT_MARK" name="PRINT_MARK" checked>                            
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-ok"></i> 儲存</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> 關閉</button>
                </div>
            </div>

        </div>

    </div>
</form> 

    <div id="pdfModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h5 class="modal-title" id="dgTitle2"></h5>
                </div>
                <div class="modal-body" id="pdfBody">
                        <div class="form-group">
                        <label class="control-label col-sm-2" for="COMP_NO2">公司名稱</label>
                        <div class="col-sm-10">                            
                            <select class="form-control"  id="COMP_NO2" name="COMP_NO2"></select>   
                        </div>
                    </div>                  
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" onclick="doPrintCorp()"><i class="glyphicon glyphicon-ok"></i> 列印</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> 關閉</button>
                </div>
            </div>

        </div>

    </div>