@{
    ViewBag.Title = "新增程式資料";
}
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-primary">
            <div class="panel-heading">@ViewBag.Title</div>
            <!-- Form Start -->
            @using (Html.BeginForm("Create", "Program", FormMethod.Post, new { @class = "form-horizontal", role = "from" }))
            {
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">
                            程式名稱</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="name" id="name" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">
                            程式路徑<br>
                            (Controllers)</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="code" id="code" maxlength="20" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">
                            外部連結</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="extra" id="extra" placeholder="請輸入外部系統的完整連結路徑，若無則請留空白!">
                        </div>
                    </div>
                    <div class="form-group has-error">
                        <label class="col-sm-2 control-label">
                            所屬選單</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="mid" id="mid">
                                <option value="0">未分類</option>
                                @Html.Raw(ViewData["MID"])
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">
                            備註</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="remark" id="remark" />
                        </div>
                    </div>
                </div>
                
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-md-4 col-md-offset-2">
                            <button type="submit" class="btn btn-block btn-success">
                                確認送出</button>
                        </div>
                        <div class="col-md-4">
                            @Html.ActionLink("回上層", "Index", "Program", null, new { @class = "btn btn-block btn-default" })
                        </div>
                    </div>
                </div>
            }
            <!-- Form Stop -->
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/jbval")
    <script type="text/javascript">
        $(function () { $("input,select,textarea").not("[type=submit]").jqBootstrapValidation(); });
    </script>
}
