@model IntranetSystem.Poco.BulletinViewModels
@{
    ViewBag.Title = "首頁";
}
<div class="row">
    <div class="col-sm-5 col-sm-offset-1">
        <div class="panel panel-info">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-info-sign"></span>系統訊息</div>
            <div class="panel-body">
                <ul>
                    @if (ViewData["AuditMsg"] != "" && ViewData["AuditMsg"] != null)
                    {
                        <li>@Html.Raw(ViewData["AuditMsg"]) @Html.ActionLink("按此查看...", "Index", "RequisitionAudit")</li>
                    }
                    @if (ViewData["DeliveryMsg"] != "" && ViewData["DeliveryMsg"] != null)
                    {
                        <li>@Html.Raw(ViewData["DeliveryMsg"]) @Html.ActionLink("按此查看...", "Index", "DeliveryOrder")</li>
                    }
                    @if (ViewData["RequisitionMsg"] != "" && ViewData["RequisitionMsg"] != null)
                    {
                        <li>@Html.Raw(ViewData["RequisitionMsg"]) @Html.ActionLink("按此查看...", "Index", "RequisitionOrder")</li>
                    }
                </ul>
            </div>
        </div>
        <div class="panel panel-success">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-stats"></span>本月部門耗材領用統計圖表</div>
            <div class="panel-body">
                @if (ViewData["AuditOk"] == "YES")
                {
                    <img alt="本月部門耗材領用統計圖表" title="本月部門耗材領用統計圖表" src="~/Charts/TonerLineChart" class="img-rounded img-responsive" />
                }
            </div>
        </div>
    </div>
    <div class="col-sm-5">
        <div class="panel panel-danger">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-eye-open"></span>安全聯防通報</div>
            <div class="panel-body">
                <ul>
                    @if (Model.SBD != null)
                    {
                        foreach (var item in Model.SBD)
                        {
                        <li><a href="~/Uploads/@item.CATEGORY/@item.PATH">@item.NAME</a> <span style="float: right;
                            font-weight: bold;">| @item.BDATE.ToShortDateString()</span></li>                    
                        }
                    }
                </ul>
            </div>
        </div>
        <div class="panel panel-success">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-file"></span>各式表單下載</div>
            <div class="panel-body">
                <ul>
                    @if (Model.DOC != null)
                    {
                        foreach (var item in Model.DOC)
                        {
                        <li><a href="~/Uploads/@item.CATEGORY/@item.PATH">@item.NAME</a> <span style="float: right;
                            font-weight: bold;">| @item.BDATE.ToShortDateString()</span></li>                    
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>


@if (ViewData["MaterialMsg"] != "" && ViewData["MaterialMsg"] != null)
{
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-warning-sign"></span>耗材庫存不足通知 <span class="badge">@ViewData["MaterialMsgCount"].ToString()</span></div>
                <div class="panel-body">
                    <table class="table table-striped table-condensed">
                        <tr>
                            <th>
                                料號
                            </th>
                            <th>
                                耗材品名
                            </th>
                            <th>
                                安全庫存量
                            </th>
                            <th>
                                目前存貨
                            </th>
                            <th>
                                差異
                            </th>
                        </tr>
                        @foreach (string item in (List<string>)ViewData["MaterialMsg"])
                        {
                            <tr>@Html.Raw(item)</tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
}
<div style="text-align: center">
    網卡位址： @ViewData["MacList"]</div>
@section header{
    <link href="~/Content/Signin.css" rel="stylesheet" type="text/css" />
}
@section scripts{
    @if (User.Identity.IsAuthenticated)
    {
        <script type="text/javascript">
            $.post('/ASP/login.asp',
                { userid: '@User.Identity.Name', aid: '@ViewData["AID"]' })
                .done(function (data) {
                    //$('#test').html(data);
                });
        </script>
    }
}
