@model IntranetSystem.Poco.WebsiteUploadPoco
@{
    ViewBag.Title = "官網廣告彈跳視窗管理";
}
<div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <div class="panel panel-primary">
            <div class="panel-heading">
                上傳檔案</div>
            <div class="panel-body">
                @using (Html.BeginForm("Edit", "WebsiteUpload", FormMethod.Post, new { enctype = "multipart/form-data", role = "form", @class = "form-horizontal" }))
                {
                    <div class="form-group">
                        <label for="Name" class="col-sm-3">
                            名稱</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" name="NAME" id="NAME" value="@this.Model.NAME">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="SDATE" class="col-sm-3">
                            開始日期</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" name="SDATE" id="SDATE" value="@this.Model.SDATE.ToShortDateString()">
                        </div>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" name="STIME" id="STIME" value="@this.Model.SDATE.ToString("HH:mm")">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="EDATE" class="col-sm-3">
                            結束日期</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" name="EDATE" id="EDATE" value="@this.Model.EDATE.ToShortDateString()">
                        </div>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" name="ETIME" id="ETIME" value='@this.Model.EDATE.ToString("HH:mm")'>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="FILE" class="col-sm-3 note">
                            *重傳檔案</label>
                        <div class="col-sm-9">
                            <input type="file" name="FILE" id="FILE" />(建議尺寸：寬250x高270)
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="LINK" class="col-sm-3">
                            連結網址</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="LINK" id="LINK" value="@this.Model.LINK">
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success col-sm-6">
                            確認修改資料</button>
                        <a href='@Url.Action("Index")' class="btn btn-default col-sm-6">回上一頁</a>
                        <input type="hidden" name="UUID" value="@this.Model.UUID" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section header{
    @Styles.Render("~/Content/themes/jui/css")
    @Scripts.Render("~/bundles/jqueryui")
    <style>
        .note
        {
            color: #FF0000;
        }
    </style>
}
@section scripts{
    <script>        $(function () {
            $("#SDATE").datepicker({ dateFormat: "yy-mm-dd" }); $("#EDATE").datepicker({
                dateFormat: "yy-mm-dd"
            });
        }); </script>
}
