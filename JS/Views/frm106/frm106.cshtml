@{
    ViewBag.Title = "Frm106 仲介資料維護";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="~/Content/easyui/exts/datagrid-filter.js"></script>
<script type="text/javascript">
    $(document).ready(function () {        
        Initialize_DataGrid();
        initDataGrid2('-');
    });

    function Initialize_DataGrid() {
        var getGridJSON = '@Url.Action("Grid", "Frm106")';
        $('#DataGrid').datagrid({
            title: '仲介資料維護',
            url: getGridJSON,
            width: '650',
            height: '400',
            rownumbers: true,
            nowrap: true,
            pagination: false,
            pageSize: 20,
            idField: 'CNO',
            striped: true,
            showHeader: true,
            fitColumns: true,
            remoteSort: false,
            singleSelect: true,
            sortName: 'CNO',
            sortOrder: 'asc',
            columns: [[
                {
                    field: 'CNO',
                    title: '仲介編號',
                    sortable: true,
                    width: 50,
                    halign: "center",
                    align: "center",
                    sortable: true,                    
                },
                {
                    field: 'CNM',
                    title: '仲介名稱',
                    sortable: true,
                    width: 120,
                    halign: "center",
                    align: "left",
                    sortable: true
                }
            ]],
            onSelect: function (rowIndex, rowData) {
                $('#CNO').val($.trim(rowData.CNO));
                $('#CNM').val($.trim(rowData.CNM));
                $('#CPID').val($.trim(rowData.CPID));
                $('#TEL').val($.trim(rowData.TEL));
                $('#ADR').val($.trim(rowData.ADR));
                $('#FAX').val($.trim(rowData.FAX));
                $('#EMAIL').val($.trim(rowData.EMAIL));
                initDataGrid2(rowData.CNO);
            }
        });

        $(function () {
            var dg = $('#DataGrid').datagrid();
            dg.datagrid('enableFilter', [{
                field: 'AA',
                type: 'textbox',
                //options: { precision: 1 },
                op: ['equal', 'notequal', 'less', 'greater']
            }]);
        });

    }

    function initDataGrid2(cno) {
        var obj = {};
        obj.CNO = cno;
        $('#DataGrid2').datagrid({
            url: '@Url.Action("Grid2", "Frm106")',
            showHeader: true,
            queryParams: obj,
            singleSelect: true,
            width: '350',
            height: '300',
            remoteSort: true,            
            sortName: 'BROKNO',
            sortOrder: 'asc',
            columns: [[
                {
                    field: 'MAN',
                    title: '姓名',
                    width: 100,
                    halign: "center",
                    align: "center",
                    sortable: true
                },
                {
                    field: 'TEL',
                    title: '電話',
                    width: 240,
                    halign: "center",
                    align: "left",
                    sortable: true
                }
            ]],
            onSelect: function (rowIndex, rowData) {
                $('#MAN2').val($.trim(rowData.MAN));
                $('#TEL2').val($.trim(rowData.TEL));
                $('#EMAIL2').val($.trim(rowData.EMAIL));
            }
        });
    }

    //新增
    function doAdd() {
        doClear();
        if ($('#mode').val() == 'save') {
            $('#btnAdd').linkbutton({ text: '取消新增' });
            $('#mode').val('add');
            $('#CNO').attr('readonly', false);
        } else {
            $('#btnAdd').linkbutton({ text: '新增' });
            $('#mode').val('save');
            $('#CNO').attr('readonly', true);
        }
    }

    //儲存
    function doSave() {
        
        var mode = $.trim($('#mode').val());
        var bResult = $('#editForm').form('validate');
        if (bResult) {
            $.ajax({
                url: '@Url.Action("Save", "Frm106")',
                type: "post",
                data: getObj(mode),
                dataType: "json",
                success: function (data, textStatus, jqXHR) {
                    if (data.status != '0') {
                        $('#btnAdd').linkbutton('enable');
                        $('#DataGrid').datagrid('reload');
                        $.messager.alert('系統訊息', '資料已儲存!', 'info');
                    } else {
                        $.messager.alert('系統訊息', data.message, 'error');
                    }
                    $('#mode').val('save');
                    $('#btnAdd').linkbutton({ text: '新增' });
                }
            });
        }
    }
    function doRemove() {
        var selectRow = $('#DataGrid').datagrid('getSelected');
        
        if (selectRow != null) {
            var obj = {};
            obj.CNO = selectRow.CNO;
            $.messager.confirm('執行確認', '是否確認刪除仲介編號:' + obj.CNO + ' 此筆資料?', function (r) {
                if (r) {
                    $.ajax({
                        url: '@Url.Action("Remove", "Frm106")',
                        type: "post",
                        data: obj,
                        dataType: "json",
                        success: function (data, textStatus, jqXHR) {
                            if (data.status != '0') {
                                $.messager.alert('系統訊息', '資料已刪除!', 'info');
                                doClear();
                                $('#DataGrid').datagrid('reload');
                            } else {
                                $.messager.alert('系統訊息', data.message, 'error');
                            }

                        }
                    });
                }
            });
        } else {
            $.messager.alert('系統訊息', '您尚未選取資料', 'warning');
        }
    }

    function doClear() {
        $('#CNO').val('');
        $('#CNM').val('');
        $('#CPID').val('');
        $('#ADR').val('');
        $('#TEL').val('');
        $('#FAX').val('');
        $('#EMAIL').val('');
    }

    function getObj(mode) {
        var obj = {};
        obj.CNO = $.trim($('#CNO').val());
        obj.CNM = $.trim($('#CNM').val());
        obj.CPID = $.trim($('#CPID').val());
        obj.ADR = $.trim($('#ADR').val());
        obj.TEL = $.trim($('#TEL').val());
        obj.FAX = $.trim($('#FAX').val());
        obj.EMAIL = $.trim($('#EMAIL').val());
        obj.mode = mode;
        return obj;
    }

    //連絡人新增											
    function doAdd2() {
        doClear2();
        if ($('#mode2').val() == 'save') {
            $('#btnAdd2').linkbutton({ text: '取消新增' });
            $('#mode2').val('add');
        } else {
            $('#btnAdd2').linkbutton({ text: '新增' });
            $('#mode2').val('save');
        }
    }

    //連絡人儲存
    function doSave2() {
        
        var mode = $.trim($('#mode2').val());
        var bResult = $.trim($('#MAN2').val());
        if (bResult != '') {
         
            $.ajax({
                url: '@Url.Action("Save2", "Frm106")',
                type: "post",
                data: getObj2(mode),
                dataType: "json",
                success: function (data, textStatus, jqXHR) {
                    if (data.status != '0') {
                        $('#btnAdd2').linkbutton('enable');
                        $('#DataGrid2').datagrid('reload');
                        $.messager.alert('系統訊息', '資料已儲存!', 'info');                        
                    } else {
                        $.messager.alert('系統訊息', data.message, 'error');
                    }
                    $('#mode2').val('save');
                    $('#btnAdd2').linkbutton({ text: '新增' });
                }
            });
        } else {
            $.messager.alert('系統訊息', '連絡人姓名不可空白!', 'error');
        }
    }
    //連絡人刪除
    function doRemove2() {
        var selectRow = $('#DataGrid2').datagrid('getSelected');
        if (selectRow != null) {
            var obj = {};
            obj.TAGID = selectRow.TAGID;
            obj.MAN2 = selectRow.MAN2;
            $.messager.confirm('執行確認', '是否確認刪除連絡人:' + obj.MAN2 + ' 此筆資料?', function (r) {
                if (r) {
                    $.ajax({
                        url: '@Url.Action("Remove2", "Frm106")',
                        type: "post",
                        data: obj,
                        dataType: "json",
                        success: function (data, textStatus, jqXHR) {
                            if (data.status != '0') {
                                $.messager.alert('系統訊息', '資料已刪除!', 'info');
                                doClear2();
                                $('#DataGrid2').datagrid('reload');
                            } else {
                                $.messager.alert('系統訊息', data.message, 'error');
                            }

                        }
                    });
                }
            });
        } else {
            $.messager.alert('系統訊息', '您尚未選取資料', 'warning');
        }
    }

    function doClear2() {
        $('#MAN').val('');
        $('#TEL').val('');
        $('#EMAIL').val('');
    }

    function getObj2(mode) {
        var obj = {};
        obj.MAN = $.trim($('#MAN2').val());
        obj.TEL = $.trim($('#TEL2').val());
        obj.EMAIL = $.trim($('#EMAIL2').val());
        obj.TAGID = $.trim($('#TAGID').val());
        obj.BROKNO = $.trim($('#CNO').val());
        obj.mode = mode;
        return obj;
    }


</script>
<h2>Frm106 仲介資料維護</h2>
<a id="btnAdd" href="#" class="easyui-linkbutton" data-options="iconCls:'add-icon'" onclick="doAdd()">新增</a>
<a id="btnSave" href="#" class="easyui-linkbutton" data-options="iconCls:'save-icon'" onclick="doSave()">儲存</a>
<a id="btnRemove" href="#" class="easyui-linkbutton" data-options="iconCls:'icon-no'" onclick="doRemove()">刪除</a>



<table width="900" border="0" cellpadding="0" cellspacing="0">
    <tr>
        <td width="600">
            <strong>仲介維護</strong><br />
            <form id="editForm" name="editForm" method="post">
                <input type="hidden" id="mode" name="mode" value="save" />
                <table width="600" border="0" cellpadding="2" cellspacing="0">
                    <tr>
                        <td width="130">仲介編號</td>
                        <td align="left"><input type="text" name="CNO" id="CNO" class="easyui-validatebox" style="width:80px" size="5" data-options="required:true" readonly="readonly" /></td>
                        <td width="50">電話</td>
                        <td align="left"><input type="text" name="TEL" id="TEL" class="easyui-validatebox" style="width:150px" /></td>
                    </tr>
                    <tr>
                        <td>仲介名稱</td>
                        <td><input type="text" name="CNM" id="CNM" class="easyui-validatebox" style="width:150px" /></td>
                        <td>傳真</td>
                        <td><input type="text" name="FAX" id="FAX" class="easyui-validatebox" style="width:150px" /></td>
                    </tr>
                    <tr>
                        <td>統一編號</td>
                        <td><input type="text" name="CPID" id="CPID" class="easyui-validatebox" style="width:150px" /></td>
                        <td>&nbsp;</td>
                        <td align="left">&nbsp;</td>
                    </tr>
                    <tr>
                        <td>電子信箱</td>
                        <td colspan="3"><input type="text" name="EMAIL" id="EMAIL" class="easyui-validatebox" style="width:400px" /></td>
                    </tr>
                    <tr>
                        <td>地址</td>
                        <td colspan="3"><input type="text" name="ADR" id="ADR" class="easyui-validatebox" style="width:400px" /></td>
                    </tr>
                </table>
            </form>
        </td>
        <td rowspan="2" valign="top" width="300">            
            <strong>連絡人</strong><br />
            <a id="btnReload" href="#" class="easyui-linkbutton" data-options="iconCls:'icon-reload'" onclick="Initialize_DataGrid()">重新顯示</a>
            <a id="btnAdd2" href="#" class="easyui-linkbutton" data-options="iconCls:'add-icon'" onclick="doAdd2()">新增</a>
            <a id="btnSave2" href="#" class="easyui-linkbutton" data-options="iconCls:'save-icon'" onclick="doSave2()">儲存</a>
            <a id="btnRemove2" href="#" class="easyui-linkbutton" data-options="iconCls:'icon-no'" onclick="doRemove2()">刪除</a><br />
            <input type="hidden" id="mode2" name="mode2" value="save" />
            <input type="hidden" id="TAGID" name="TAGID" value="" />
            姓名 <input type="text" name="MAN2" id="MAN2" class="easyui-validatebox" style="width:150px" /><br />
            電話 <input type="text" name="TEL2" id="TEL2" class="easyui-validatebox" style="width:150px" /><br />
            EMAIL <input type="text" name="EMAIL2" id="EMAIL2" class="easyui-validatebox" style="width:300px" /><br />
            <table id="DataGrid2"></table>
        </td>
    </tr>
    <tr>
        <td valign="top"><table id="DataGrid"></table></td>
    </tr>
</table>





