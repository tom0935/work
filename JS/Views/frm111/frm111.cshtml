     function Initialize_DataGrid() {
         var getGridJSON = '@Url.Action("Grid", "Frm111")';
        $('#DataGrid').datagrid({
            title: '合約公司維護',
            url: getGridJSON,
            width: '650',
            height: '400',
            rownumbers: true,
            nowrap: true,
            pagination: false,
            pageSize: 20,
            idField: 'CNO',
            striped: true,
            showHeader: true,
            fitColumns: true,
            remoteSort: false,
            singleSelect: true,
            sortName: 'CNO',
            sortOrder: 'asc',
            columns: [[
                {
                    field: 'CNO',
                    title: '公司編號',
                    sortable: true,
                    width: 50,
                    halign: "center",
                    align: "center",
                    sortable: true
                },
                {
                    field: 'EMAIL',
                    title: '虛擬帳號',
                    sortable: true,
                    width: 80,
                    halign: "center",
                    align: "left",
                    sortable: true
                },
                {
                    field: 'CNM',
                    title: '公司名稱',
                    sortable: true,
                    width: 150,
                    halign: "center",
                    align: "left",
                    sortable: true
                }
            ]],
            onSelect: function (rowIndex, rowData) {


                $('#CNO').val($.trim(rowData.CNO));
                $('#CNM').val($.trim(rowData.CNM));
                $('#ENM').val($.trim(rowData.ENM));                
                
                if (rowData.CSTTP == "1") {
                    $('input[name="CSTTP"]')[0].checked = true;
                } else {
                    $('input[name="CSTTP"]')[1].checked = true;
                }
                if (rowData.CSTLEVL == "1") {
                    $('input[name="CSTLEVL"]')[0].checked = true;
                } else {
                    $('input[name="CSTLEVL"]')[1].checked = true;
                }

                $('#COMETP').combobox('setValue',$.trim(rowData.COMETP));
                $('#CPADR').val($.trim(rowData.CPADR));
                $('#SENDADR').val($.trim(rowData.SENDADR));
                $('#CPMGR').val($.trim(rowData.CPMGR));
                $('#CPID').val($.trim(rowData.CPID));
                $('#TEL').val($.trim(rowData.TEL));
                $('#FAX').val($.trim(rowData.FAX));
                $('#RUNTP').combobox('setValue',$.trim(rowData.RUNTP));
                $('#EMAIL').val($.trim(rowData.EMAIL));


                $('#CNTACT').val($.trim(rowData.CNTACT));
                
                if (rowData.CSTLEVL == "1") {
                    $('input[name="CSTLEVL"]')[0].checked = true;
                } else {
                    $('input[name="CSTLEVL"]')[1].checked = true;
                }






                $('#TAGID').val('');
                $('#dMAN').val('');
                $('#dEMAIL').val('');
                $('#dTEL').val('');
                $('#dNOTES').val('');
                
                initDataGrid2(rowData.CNO);
            }
        });

        $(function () {
            var dg = $('#DataGrid').datagrid();
            dg.datagrid('enableFilter', [{
                field: 'AA',
                type: 'textbox',
                //options: { precision: 1 },
                op: ['equal', 'notequal', 'less', 'greater']
            }]);
        });

    }


    function initDataGrid2(cno) {
        var obj = {};
        obj.CNO = cno;
        $('#DataGrid2').datagrid({
            url: '@Url.Action("Grid2", "Frm111")',
            showHeader: true,
            queryParams: obj,
            singleSelect: true,
            width: '310',
            height: '250',
            columns: [[
                {
                    field: 'MAN',
                    title: '姓名',                    
                    width: 150,
                    halign: "center",
                    align: "center"
                },
                {
                    field: 'TEL',
                    title: '電話',
                    width: 150,
                    halign: "center",
                    align: "left"
                }
            ]],
            onSelect: function (rowIndex, row) {                
                $('#TAGID').val($.trim(row.TAGID));
                $('#dMAN').val($.trim(row.MAN));
                $('#dTEL').val($.trim(row.TEL));
                $('#dEMAIL').val($.trim(row.EMAIL));
                $('#dNOTES').val($.trim(row.NOTES));

            }
        });
    }


    //新增											
    function doAdd() {
        doClear();
        if ($('#mode').val() == 'save') {
            $('#btnAdd').linkbutton({ text: '取消新增' });
            $('#mode').val('add');
            $('#CNO').attr('readonly', false);
        } else {
            $('#btnAdd').linkbutton({ text: '新增' });
            $('#mode').val('save');
            $('#CNO').attr('readonly', true);
        }
    }

    //儲存
    function doSave() {
        
        var mode = $.trim($('#mode').val());

        var bResult = $('#editForm').form('validate');
        if (bResult) {
            $.ajax({
                url: '@Url.Action("Save", "Frm111")',
                type: "post",
                data: getObj(mode),
                dataType: "json",
                success: function (data, textStatus, jqXHR) {
                    if (data.status != '0') {
                        $('#btnAdd').linkbutton('enable');
                        $('#DataGrid').datagrid('reload');
                        $.messager.alert('系統訊息', '資料已儲存!', 'info');
                    } else {
                        $.messager.alert('系統訊息', data.message, 'error');
                    }
                    $('#mode').val('save');
                    $('#btnAdd').linkbutton({ text: '新增' });
                }
            });
        }
    }
    function doRemove() {
        var selectRow = $('#DataGrid').datagrid('getSelected');        
        if (selectRow != null) {
            var obj = {};
            obj.CNO = selectRow.CNO;
            $.messager.confirm('執行確認', '是否確認刪除合約公司編號:' + obj.CNO + ' 此筆資料?', function (r) {
                if (r) {
                    $.ajax({
                        url: '@Url.Action("Remove", "Frm111")',
                        type: "post",
                        data: obj,
                        dataType: "json",
                        success: function (data, textStatus, jqXHR) {
                            if (data.status != '0') {
                                $.messager.alert('系統訊息', '資料已刪除!', 'info');
                                doClear();
                                $('#DataGrid').datagrid('reload');
                            } else {
                                $.messager.alert('系統訊息', data.message, 'error');
                            }

                        }
                    });
                }
            });
        } else {
            $.messager.alert('系統訊息', '您尚未選取資料', 'warning');
        }


    }

    function doClear() {
        $('#CNO').val('');
        $('#CNM').val('');
        $('#CNTACT').val('');
        $('#TEL').val('');
        $('#FAX').val('');
        
    }

    function getObj(mode) {
        var obj = {};
        obj.CNO = $.trim($('#CNO').val());
        obj.CNM = $.trim($('#CNM').val());
        obj.CNTACT = $.trim($('#CNTACT').val());
        obj.TEL = $.trim($('#TEL').val());
        obj.FAX = $.trim($('#FAX').val());
        
        obj.CPMGR = $.trim($('#CPMGR').val());
        obj.ENM = $.trim($('#ENM').val());
        obj.CPADR = $.trim($('#CPADR').val());
        obj.CPID = $.trim($('#CPID').val());
        obj.SENDADR = $.trim($('#SENDADR').val());
        obj.EMAIL = $.trim($('#EMAIL').val());
        


        obj.CSTLEVL = $("input[name='CSTLEVL']:checked").val();
        obj.CSTTP = $("input[name='CSTTP']:checked").val();


        obj.RUNTP = $('#RUNTP').combobox('getValue');
        obj.COMETP = $('#COMETP').combobox('getValue');        

        obj.mode = mode;
        return obj;
    }

    

    //刊物新增											
    function doAdd2() {
