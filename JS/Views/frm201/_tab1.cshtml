
@if (@ViewBag.CNHNO==null)
{
    <a id="btn1Contract" href="#" class="easyui-linkbutton" data-options="iconCls:'table-money-icon'" onclick="showContractManagerDialog()">租金作業</a>
}

<table width="650" border="1">
    <tr>
        <td width="106">房屋合約編號<input type="hidden" id="CONTRAH_TAGID" name="CONTRAH_TAGID"  /></td>
        <td colspan="4"><input type="text" id="CNHNO" name="CNHNO" readonly /></td>
    </tr>
    <tr>
        <td>起租日</td>
        <td width="170">
            <label>
                <input type="text" id="DT1" name="DT1" class="easyui-datebox" style="width:160px;height:28px" data-options="prompt:'YYYY-MM-DD',required:true,validType:['date']" />
            </label>
        </td>
        <td width="61">到期日</td>
        <td colspan="2"><input type="text" id="DT2" name="DT2" class="easyui-datebox" style="width:160px;height:28px" data-options="prompt:'YYYY-MM-DD',required:true,validType:['date','isAfter[\'#DT1\']']" /></td>
    </tr>
    <tr>
        <td>共計</td>
        <td colspan="4">
            <input type="text" id="YRS" name="YRS" class="easyui-validatebox" style="width:40px" readonly />
            年
            <input type="text" id="MNS" name="MNS" class="easyui-validatebox" style="width:40px" readonly />
            月
            <input type="text" id="DYS" name="DYS" class="easyui-validatebox" style="width:40px" readonly />
            日  <a id="btn1" href="#" class="easyui-linkbutton"  onclick="chkYMD('')">計算天數</a>
        </td>
    </tr>
    <tr>
        <td>月租費</td>
        <td><input type="text" id="RNFEE" name="RNFEE" /></td>
        <td colspan="3">

            <input id="RNFEETP" name="RNFEETP" type="radio" value="1" checked />
            月繳
            <input id="RNFEETP" name="RNFEETP" type="radio" value="2" />
            季繳
            <input id="RNFEETP" name="RNFEETP" type="radio" value="3" />
            半年繳
            <input id="RNFEETP" name="RNFEETP" type="radio" value="4" />
            年繳
        </td>
    </tr>
    <tr>
        <td>管理費</td>
        <td><input type="text" id="MGFEE" name="MGFEE" /></td>
        <td colspan="3">
            <input id="MGFEETP" name="MGFEETP" type="radio" value="1" checked />
            月繳
            <input id="MGFEETP" name="MGFEETP" type="radio" value="2" />
            季繳
            <input id="MGFEETP" name="MGFEETP" type="radio" value="3" />
            半年繳
            <input id="MGFEETP" name="MGFEETP" type="radio" value="4" />
            年繳
        </td>
    </tr>
    <tr>
        <td>履約保證金</td>
        <td><input type="text" id="GUAFEE" name="GUAFEE" /></td>
        <td colspan="3">
            <label>
                特案租金
                <input type="checkbox" id="SP" name="SP" />
            </label>
        </td>
    </tr>
    <tr>
        <td>合約備註</td>
        <td>&nbsp;</td>
        <td colspan="2">
            折數一
            <input type="text" id="DSCON1" name="DSCON1" class="easyui-validatebox" style="width:40px" />
            %
        </td>
        <td width="131">
            折數二
            <input type="text" id="DSCON2" name="DSCON2" class="easyui-validatebox" style="width:40px" />
            %
        </td>
    </tr>
    <tr>
        <td colspan="5"><textarea id="CNHNOTE" name="CNHNOTE" cols="50" rows="5"></textarea></td>
    </tr>
    <tr>
        <td colspan="5">合約異動記錄</td>
    </tr>
    <tr>
        <td height="140" colspan="5" valign="top">
            <label>
                <table id="UPDNOTE_DG"></table>
            </label>
        </td>
    </tr>
</table>